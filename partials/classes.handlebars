<div class="title">
    <span class="source-link"><a href="{{foundAt}}">`{{file}}:{{line}}`</a></span>
    <h1 class="class-name">{{moduleName}}</h1>
</div>

{{#if uses}}
    Uses:
    {{#each uses}}
        <a href="{{this}}.html">{{this}}</a>
    {{/each}}
    <br>
{{/if}}

{{#if extension_for}}
    Extension For:
    {{#each extension_for}}
        <a href="{{this}}.html">{{this}}</a>
    {{/each}}
    <br>
{{/if}}

{{#if extends}}
    <div class="class-extends">
        <h4>Extends:</h4>
        <div>{{#crossLink extends}}{{/crossLink}} â†’ {{moduleName}}</div>
    </div>
{{/if}}

<div class="class-description">{{{classDescription}}}</div>

{{#if is_constructor}}
    {{#is_constructor}}
        {{>method}}
    {{/is_constructor}}
{{/if}}

<div id="classdocs">
    {{#if methods}}
        <div id="methods">
        <h2>Methods</h2>
        {{#methods}}
            {{>method}}
        {{/methods}}
        </div>
    {{/if}}
    {{#if properties}}
        <div id="props">
        <h2>Properties</h2>
        {{#properties}}
            {{>props}}
        {{/properties}}
        </div>
    {{/if}}
    {{#if attrs}}
        <div id="attrs">
        <h2>Attributes</h2>
        {{#attrs}}
            {{>attrs}}
        {{/attrs}}
        </div>
    {{/if}}
    {{#if events}}
        <div id="events">
        <h2>Events</h2>
        {{#events}}
            {{>events}}
        {{/events}}
        </div>
    {{/if}}
</div>
